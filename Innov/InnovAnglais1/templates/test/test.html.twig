{% extends 'base.html.twig' %}
{% block title %}{{ parent()}} Ajout d'un abonnements {% endblock %}
{% block contenu %}
    <div class="container">
    {{ form_start(form) }}
    {{ form_errors(form) }}
     <div class="form-group">
    {{  form_label(form.niveau,  'Niveau:',  {'label_attr':  {'class':  'col-sm-2  control-label'}}) }} 
        <div class="col-sm-10">
        {{ form_errors(form.niveau) }} 
        {{ form_widget(form.niveau) }} 
        {{ form_help(form.niveau) }}
        </div>
    </div>  
    <div class="form-group">
    {{  form_label(form.theme,  'Theme:',  {'label_attr':  {'class':  'col-sm-2  control-label'}}) }} 
        <div class="col-sm-10">
        {{ form_errors(form.theme) }} 
        {{ form_widget(form.theme) }} 
        {{ form_help(form.theme) }}
        </div>
    </div>  
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        {{ form_widget(form.save) }} 
        </div>
    </div>
    {{ form_end(form) }}  
    </div>
{% endblock %}   